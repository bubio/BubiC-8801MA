{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake debug build (macOS)",
            "type": "shell",
            "command": "./scripts/build_macOS.sh Debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "CMake debug build (Windows)",
            "type": "shell",
            "command": "./scripts/build_windows.ps1 -BuildType Debug",
            "group": {
                "kind": "build"
            },
        },
        {
            "label": "CMake debug build (Linux)",
            "type": "shell",
            "command": "./scripts/build_linux.sh Debug",
            "group": {
                "kind": "build"
            },
        }
    ]
}
